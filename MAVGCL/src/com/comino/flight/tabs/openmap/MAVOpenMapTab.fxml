<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import com.comino.flight.widgets.gps.details.GPSDetailsWidget?>

<fx:root styleClass="widget" type="javafx.scene.layout.BorderPane"
	xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<Pane prefHeight="34">
			<children>
				<Slider fx:id="zoom" blockIncrement="5.0" layoutX="10.0"
					layoutY="8.0" majorTickUnit="1.0" max="20.0" min="15.0" prefHeight="15.0"
					prefWidth="161.0" showTickMarks="true" value="20.0" />
				<ChoiceBox fx:id="gpssource" layoutX="180.0" layoutY="5.0"
					prefHeight="19.0" prefWidth="100.0" />
				<ChoiceBox fx:id="tiletype" layoutX="293" layoutY="5.0"
					prefHeight="19.0" prefWidth="100.0" />
				<CheckBox fx:id="viewdetails" layoutX="410.0" layoutY="9.0"
					mnemonicParsing="false" text="GPS Details" />
			</children>
		</Pane>
	</top>
	<center>
		<StackPane alignment="TOP_LEFT">
			<children>
				<BorderPane fx:id="mapviewpane" prefWidth="800" />
				<GPSDetailsWidget fx:id="gpsdetails"
				    prefHeight="140" prefWidth="185"
				    maxHeight="140" maxWidth="185" visible="false"
					styleClass="glass">
					<StackPane.margin>
						<Insets left="10.0" top="13.0" />
					</StackPane.margin>
				</GPSDetailsWidget>
			</children>
		</StackPane>
	</center>
	<bottom>
		<Pane prefHeight="10" />
	</bottom>
	<left>
		<Pane prefWidth="10" />
	</left>
	<right>
		<Pane prefWidth="10" />
	</right>
</fx:root>
